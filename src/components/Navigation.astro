// const { links } = Astro.props;
---
<nav class="container mx-auto px-4 py-2 md:flex md:justify-between md;items-center">
  <div class="flex flex-1/2 justify-between items-center">
    <img src="https://astro.build/assets/press/astro-logo-dark.svg" alt="brand logo" class="w-40 hover:scale-[1.04] transition-transform cursor-pointer">
    <!-- ? desktop nav -->
    <button class="flex flex-col gap-[.92rem] w-[3rem] h-[3rem] border-0 bg-transparent cursor-pointer group md:hidden toggle" id="toggle">
      <div class="h-[2px] w-full bg-neutral-800 rounded-xs transition-all ease-in-out duration-150 origin-left group-hover:rotate-45"></div>
      <div class="h-[2px] w-full bg-neutral-800 rounded-xs transition-all ease-in-out duration-150 origin-center group-hover:opacity-0"></div>
      <div class="h-[2px] w-full bg-neutral-800 rounded-xs transition-all ease-in-out duration-150 origin-left group-hover:rotate-[-45deg]"></div>
    </button>
  </div>
  <!-- ? mobile nav -->
  <div class="md:flex flex-1/2 justify-between items-center gap-4 menu transition-all" id="menu">
    <ul class="flex flex-col md:flex-row items-center gap-3.5 [&_li]:text-teal-700">
      <li class="transition-colors duration-100 hover:text-teal-600"><a href="/">Home</a></li>
      <li class="transition-colors duration-100 hover:text-teal-600"><a href="/about">About</a></li>
      <li class="transition-colors duration-100 hover:text-teal-600"><a href="/blog">Blog</a></li>
      <li class="transition-colors duration-100 hover:text-teal-600"><a href="#">Contact</a></li>
    </ul>
  </div>
</nav>